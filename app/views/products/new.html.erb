<h1 class="title"> add new product</h1>

<div>
  <%= form_for @product do |f| %>
    <div class="field">
    </div>
    <div class="field">
      <div>
        <%= f.label :name %>
        <%= f.text_field :name %>
      </div>
    </div>
    <div class="field">
      <div>
        <%= f.label :description %>
        <%= f.text_field :description %>
      </div>
    </div>
    <td><%= f.label :category %></td>
    <td><%= f.select(:main_category_id, options_from_collection_for_select(MainCategory.all, :id, :name)) %></td>  
    <td><%= f.label :subcategory %></td>
    <td><%= f.select(:sub_category_id, options_from_collection_for_select(SubCategory.all, :id, :name)) %></td>
    

    <div>
      <%= f.file_field :avatars, multiple: true %>
    </div>

    <%= f.submit "add product" %>
  <% end %>  
</div>
